@using tesvolt.dbmodels.app

@model tesvolt.dbmodels.app.ProjectModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <div class="float-start">
                    <strong>Project Create</strong>
                </div>
                <div class="float-end">
                    <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProjectCode" class="control-label"></label>
                        <input asp-for="ProjectCode" class="form-control" />
                        <span asp-validation-for="ProjectCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AssetName" class="control-label"></label>
                        <input asp-for="AssetName" class="form-control" />
                        <span asp-validation-for="AssetName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PoNameId" class="control-label"></label>
                        <select asp-for="PoNameId" class="form-control" asp-items="ViewBag.ProductOwners">
                            <option value="">Select Product Owner</option>
                        </select>
                        <span asp-validation-for="PoNameId" class="text-danger"></span>
                    </div>
@* 
                    <div class="form-group">
                        <label asp-for="AccumulatedHrId" class="control-label"></label>
                        <select asp-for="AccumulatedHrId" class="form-control" asp-items="ViewBag.AccumulatedHrs">
                            <option value="">Select Accumulated HR</option>
                        </select>
                        <span asp-validation-for="AccumulatedHrId" class="text-danger"></span>
                    </div> *@

                    <div class="form-group">
                        <label asp-for="ProjectStatus" class="control-label"></label>
                        <div class="d-flex">
                            @foreach (var enumValue in Enum.GetValues(typeof(ProjectStatus)).Cast<ProjectStatus>())
                            {
                                <div class="form-check me-3">
                                    <input asp-for="ProjectStatus"
                                           type="radio"
                                           class="form-check-input"
                                           value="@enumValue"
                                           id="projectStatus_@enumValue"
                                           name="ProjectStatus" />  @* Ensure name matches the model property *@
                                    <label class="form-check-label" for="projectStatus_@enumValue">
                                        @enumValue.ToString()
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="ProjectStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group float-end">
                        <button type="submit" class="btn btn-success rounded-pill"><span class="cil-contrast"></span> Create </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
