@model tesvolt.dbmodels.app.ProjectModel

@{
    ViewData["Title"] = "Delete";
}



<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <strong>Confirm Project Deletion</strong>
                    <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
                </div>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ProjectCode)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ProjectCode)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.AssetName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.AssetName)
                    </dd>

                    @* <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.AccumulatedHr)
                    </dt> *@
                  @*   <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.AccumulatedHr.Name)
                    </dd> *@

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ProjectStatus)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ProjectStatus)
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="alert alert-danger mt-4" role="alert">
                        <h5 class="alert-heading">Warning!</h5>
                        <p>Are you sure you want to delete this resource? This action cannot be undone.</p>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-danger me-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
