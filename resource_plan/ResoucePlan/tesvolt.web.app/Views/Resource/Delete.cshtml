@using tesvolt.dbmodels.app
@model tesvolt.dbmodels.app.ResourceModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <div class="float-start">
                    <strong>Confirm Resource Deletion</strong>
                </div>
                <div class="float-end">
                    <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Role)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Skills)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Skills)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="alert alert-danger mt-4" role="alert">
                        <h5 class="alert-heading">Warning!</h5>
                        <p>Are you sure you want to delete this resource? This action cannot be undone.</p>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-danger me-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
