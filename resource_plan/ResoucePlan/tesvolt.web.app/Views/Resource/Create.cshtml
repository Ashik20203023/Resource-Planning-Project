@using tesvolt.dbmodels.app
@model tesvolt.dbmodels.app.ResourceModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <div class="float-start">
                    <strong>Resource Create</strong>
                </div>
                <div class="float-end">
                    <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Category" class="control-label"></label>
                        <div class="d-flex">
                            @foreach (var enumValue in Enum.GetValues(typeof(ResourceCategory)).Cast<ResourceCategory>())
                            {
                                <div class="form-check me-3">
                                    <input asp-for="Category"
                                           type="radio"
                                           class="form-check-input"
                                           value="@enumValue.ToString()"
                                           id="category_@enumValue"
                                           name="Category" />
                                    <label class="form-check-label" for="category_@enumValue">
                                        @enumValue.ToString()
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Role" class="control-label"></label>
                        <div class="d-flex">
                            @foreach (var enumValue in Enum.GetValues(typeof(ResourceRole)).Cast<ResourceRole>())
                            {
                                <div class="form-check me-3">
                                    <input asp-for="Role"
                                           type="radio"
                                           class="form-check-input"
                                           value="@enumValue.ToString()"
                                           id="role_@enumValue"
                                           name="Role" />
                                    <label class="form-check-label" for="role_@enumValue">
                                        @enumValue.ToString()
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Skills" class="control-label"></label>
                        <input asp-for="Skills" class="form-control" required />
                        <span asp-validation-for="Skills" class="text-danger"></span>
                    </div>

                    <div class="form-group float-end">
                        <button type="submit" class="btn btn-success rounded-pill"><span class="cil-contrast"></span> Create </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
